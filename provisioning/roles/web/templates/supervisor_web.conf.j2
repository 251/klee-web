[program:web]
command={{ web_virtualenv }}/bin/uwsgi -s /tmp/uwsgi.sock -w python.web.web:app -H {{ web_virtualenv }} --chmod-socket=666 {{ "--py-autoreload=1 --catch-exceptions" if development else ""}}
directory={{ src_dir }}
autostart=true
autorestart=true
stdout_logfile={{ web_log_dir }}/web.log
redirect_stderr=true
user=web
stopsignal=QUIT
environment=BROKER_URL="{{ rabbitmq_broker_url }}"{{ ',DEVELOPMENT="1"' if development else ''}}